pipeline{
    agent any
    stages('different statge '){
  
        stage('Build docker image'){
            steps{
            sh 'FROM ubuntu'
            sh 'docker image build -t $JOB_NAME:v1.$BUILD_ID .'
            sh 'docker image tag $JOB_NAME:v1.$BUILD_ID zk0034630/$JOB_NAME:v1.$BUILD_ID '
            sh 'docker image tag $JOB_NAME:v1.$BUILD_ID zk0034630/$JOB_NAME:latest'
            }
            
        }
        
        stage('Testing'){
            steps{
                echo 'Testing code'
            }
            
        }
        
        stage('Deploy'){
            steps{
                echo 'Deploying code'
            }
        }
        stage('Say Congrates'){
            steps{
                echo 'Congratulation for this successful deployment...wow'
            }
            
        }
    }
}
